{
    "name":"Auto Reloader",
    "description":"Automatically reloades webpages",
    "version":"1.0",
    "manifest_version":3,
    "permissions":[
        "activeTab",
        "tabs"
    ],
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "action":{
        "default_popup":"popup.html"
    },
   
    "background":{
        "service_worker":"background.js"
     }

}